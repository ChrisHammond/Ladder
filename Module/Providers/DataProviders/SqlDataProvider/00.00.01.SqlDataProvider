      ,[createdbyuserid]
      ,[lastupdatedbyuserid]
	  ,[fieldidentifier]
	  ,[portalid]
  FROM {databaseOwner}[{objectQualifier}Ladder_Game]
  WHERE
	[gameid] = @gameid

GO

