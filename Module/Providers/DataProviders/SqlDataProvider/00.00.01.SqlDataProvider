CREATE PROCEDURE {databaseOwner}[{objectQualifier}Ladder_AddTeam]
	@name nvarchar(100)
	,@firstplayed datetime
       ,@lastplayed datetime
       ,@createdbyuserid int
       ,@lastupdatedbyuserid int
	   ,@portalid int
AS

INSERT INTO {databaseOwner}[{objectQualifier}Ladder_Team]
           ([name]
           ,[firstplayed]
           ,[lastplayed]
           ,[createdbyuserid]
           ,[createddate]
           ,[lastupdatedbyuserid]
           ,[lastupdateddate]
		   ,[games]
		   ,[wins]
		   ,[losses]
		   ,[portalid])
	VALUES
	(@name
	,@firstplayed
	,@lastplayed
	,@createdbyuserid
	,GetDate()
	,@lastupdatedbyuserid
	,GetDate()
	,0
	,0
	,0
	,@portalid)
Select @@Identity
GO




