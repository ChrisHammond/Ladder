CREATE PROCEDURE {databaseOwner}[{objectQualifier}Ladder_AddPlayer]
	@UserId int
AS
INSERT INTO {databaseOwner}[{objectQualifier}Ladder_Player]
           ([userid]
           ,[games]
           ,[wins]
           ,[losses])
     VALUES
           (@UserId
           ,0
           ,0
           ,0)
           
Select @@Identity
GO


