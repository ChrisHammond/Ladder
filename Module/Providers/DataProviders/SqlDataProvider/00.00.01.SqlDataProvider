CREATE PROCEDURE {databaseOwner}[{objectQualifier}Ladder_UpdatePlayer]
	@UserId int,
	@Games int,
	@Wins int,
	@Losses int
AS
update {databaseOwner}[{objectQualifier}Ladder_Player]
set [games] = @games
           ,[wins] = @wins
           ,[losses] = @losses
where userId = @UserId

GO




